@{
    ViewBag.Title = "Home Page";
    int i = 1;
}

<div class="jumbotron">
    <h1>Mortgage Calculator</h1>
    <p class="lead">
        The Mortgage Calculator helps you:
        <ul>
            <li>Choose the right loan for you</li>
            <li>The Interests and Repayment on your loan</li>
        </ul>
    </p>
</div>


<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend>Calculator</legend>

                <!-- Select Mortgage Type -->
                <div class="form-group">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Mortgage Type</th>
                                <th scope="col">Interest Payment</th>
                                <th scope="col">Setup Fee</th>
                                <th scope="col">Cancel Fee</th>
                                <th scope="col">Interest Rate</th>
                                <th scope="col">Select</th>
                            </tr>
                        </thead>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <th scope="row">@(i++)</th>
                                <td>@m.Name</td>
                                <td>@m.MortgageType</td>
                                <td>@m.InterestRepayment</td>
                                <td>@m.EstablishmentFee</td>
                                <td>@m.CancellationFee</td>
                                <td>@m.InterestRate</td>
                                <td><input type="radio" name="mortSelected" value="@m.InterestRepayment,@m.InterestRate" required="" /></td>
                            </tr>
                        }
                    </table>

                </div>

                <!-- Text input-->
                <div class="form-group">
                    <div class="row col-md-12">
                        <label class="col-md-2 control-label" for="textinput">Borrowed Amount</label>
                        <div class="col-md-3">
                            <input id="loanAmount" name="loanAmount" type="text" placeholder="0.00" class="form-control input-md" required="">
                            <span class="help-block">Enter the amount to borrow</span>
                        </div>
                        <label class="col-md-2 control-label" for="textinput">Loan Duration</label>
                        <div class="col-md-3">
                            <input id="loanDuration" name="loanDuration" type="text" placeholder="1-30" class="form-control input-md" required="">
                            <span class="help-block">Select loan period in years</span>
                        </div>
                        <div class="col-md-2">
                            <input class="btn btn-block" type="button" value="Calculate" name="calButton" />
                        </div>
                    </div>
                </div>
                <div class="form-group" style="background-color:lightcyan">
                    <div class="row col-md-12">
                        <label class="col-md-2 control-label">Total Repayment</label>
                        <span class="col-md-1 control-label" id="totalRepayment"></span>
                    </div>
                    <div class="row col-md-12">
                        <label class="col-md-2 control-label">Total Interest</label>
                        <span class="col-md-1 control-label" id="totalInterest"></span>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</div>

